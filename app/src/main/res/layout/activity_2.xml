<?xml version="1.0" encoding="utf-8"?>
<layout>
<data>
    <import type="com.sample.dbinding.model.User"></import>
    <variable name="user" type="User"></variable>

</data>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.Activity2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{`姓名：` + user.name}"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{`性别：` + user.sex}"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{`年龄：` + String.valueOf(user.age)}"/>

</LinearLayout>
</layout>